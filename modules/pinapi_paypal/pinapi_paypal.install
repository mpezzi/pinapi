<?php 

/**
 * Implements hook_schema().
 */
function pinapi_paypal_schema() {
  $schema['pinapi_paypal'] = array(
    'description' => t('Stores Paypal information.'),
    'fields' => array(
      'uid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0),
      'status' => array(
        'type' => 'int', 
        'not null' => TRUE),
      'data' => array(
        'type' => 'text',
        'not null' => FALSE,
        'size' => 'big',
        'description' => 'A serialized array of PayPal transaction notification data',
      ),
    ),
    'primary key' => array('uid'),
  );
  return $schema;
}

/**
 * Implements hook_install().
 */
function pinapi_paypal_install() {
  drupal_install_schema('pinapi_paypal');
}

/**
 * Implements hook_uninstall().
 */
function pinapi_paypal_uninstall() {
  drupal_uninstall_schema('pinapi_paypal');

  // Remove pinapi variables.
  $result = db_query("SELECT name FROM {variable} WHERE name LIKE 'pinapi_paypal_%'");
  while ( $row = db_fetch_object($result) ) {
    variable_del($row->name);
  }

  drupal_set_message(t('PinAPI Paypal has been uninstalled.'));
}